<configuration>
  <property>
    <name>logstash_user</name>
    <value>logstash</value>
    <property-type>USER</property-type>
    <description>Service User for Logstash</description>
    <value-attributes>
      <type>user</type>
      <overridable>false</overridable>
    </value-attributes>
  </property>
  <property>
    <name>logstash_group</name>
    <value>hadoop</value>
    <property-type>GROUP</property-type>
    <description>Service Group for Logstash</description>
    <value-attributes>
      <type>user</type>
      <overridable>false</overridable>
    </value-attributes>
  </property>
  <property require-input="true">
    <name>path_data</name>
    <value>/var/lib/logstash</value>
    <description>Directory used by logstash and its plugins</description>
  </property>
  <property require-input="true">
    <name>log_dir</name>
    <value>/var/log/logstash</value>
    <description>Log directory for Logstash</description>
  </property>
  <property require-input="true">
    <name>log_level</name>
    <value>info</value>
    <description>Log Level. Default: info. Allowed: fatal,error,warn,info,debug,trace</description>
  </property>
  <property require-input="true">
    <name>es_url</name>
    <value></value>
    <description>The Elasticsearch instance to use. (http://eshost:9200)</description>
  </property>
  <property require-input="true">
    <name>input_port</name>
    <value>5044</value>
    <description>Beats input port to use for Logstash.  Default: 5044</description>
  </property>
  <property require-input="true">
    <name>kibana_url</name>
    <value></value>
    <description>The Kibana instance to use. (http://kibana_host:5000)</description>
  </property>
</configuration>
